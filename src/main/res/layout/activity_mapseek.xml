<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#EDEDED"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton

            android:layout_width="0dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_weight="1.5"
            android:id="@+id/menu_v"
            android:src="@drawable/travel_msg_back"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="#ffff"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/search"/>
        </LinearLayout>

        <EditText
            android:layout_marginLeft="5dp"
            android:id="@+id/ed_text"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="#ffff"
            android:hint="搜索"/>
        <Button
            android:id="@+id/seek_btn"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="搜索"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:background="#436EEE"
            android:layout_marginRight="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:background="#ffff"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/grogshop_btn"
                style="@style/seek_button"
                android:text="酒店"
                />
            <Button
                android:id="@+id/cate"
                android:text="美食"
                style="@style/seek_button"/>
            <Button
                android:id="@+id/bank"
                android:text="银行"
                style="@style/seek_button"/>
            <Button
                android:id="@+id/cybercafe"
                android:text="网吧"
                style="@style/seek_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/sight"
                style="@style/seek_button"
                android:text="景点"
                />
            <Button
                android:id="@+id/supermarket"
                android:text="超市"
                style="@style/seek_button"/>
            <Button
                android:id="@+id/hospital"
                android:text="医院"
                style="@style/seek_button"/>
            <Button
                android:id="@+id/bath"
                android:text="洗浴"
                style="@style/seek_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/toilet"
                style="@style/seek_button"
                android:text="厕所"
                />
            <Button
                android:id="@+id/expressage"
                android:text="快递"
                style="@style/seek_button"/>
            <Button
                android:id="@+id/gasStation"
                android:text="加油站"
                style="@style/seek_button"/>
            <Button
                android:text="获取更多"
                android:textColor="#787878"
                style="@style/seek_button"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="12dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="9"
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ListView
            android:id="@+id/seek_list"
            android:background="#ffff"
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </LinearLayout>

</LinearLayout>